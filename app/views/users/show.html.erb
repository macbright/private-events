<h1>Users Page</h1>

<% if logged_in? %>
  <h2> <%= @user.name %> </h2>

  <div class="row">
  <div class="col-md-6 col-md-offset-3">

      <%= form_for(@event) do |f| %>
        
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>

        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %>

        <%= f.label :event_date %>
        <%= f.date_field :event_date, class: "form-control" %>

        <%= f.hidden_field :creator_id, value: @user.id %>
        <br>
        <%= f.submit "Publish", class: "btn btn-primary" %>
      <% end %>

  </div>
</div>

<% else %>
  <p> Please sign in. <p>
  <%= link_to "Sign in", login_path %>
<% end %>


