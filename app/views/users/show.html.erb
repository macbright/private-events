
<% if logged_in? %>

  <div class="row">
    <div class="col-md-3 ">
      <%= render 'events/event_form' %>
  </div>
    
  <div class="col-md-6">
    <div id="user-upcoming-events">
      <h2> Upcoming Events </h2>
      <%= render @user.upcoming %>
    </div>

    <div id="user-past-events">
      <h2> Past Events </h2>
      <%= render @user.previous %>
    </div>

  </div>

   <div class="col-md-3">
    <h5> Attending Events</h5>
      <%= render @user.attended_events %>
  </div>
</div>

<% else %>
  <h2> Please sign in. <h2>
  <%= link_to "Sign in", login_path %>
<% end %>





