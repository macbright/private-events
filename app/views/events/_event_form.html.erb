<%= form_for(@event) do |f| %>
      
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>

      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>

      <%= f.label :location %>
      <%= f.text_field :location, class: "form-control" %>

      <%= f.label :event_date %>
      <%= f.date_field :event_date, class: "form-control" %>

      <%= f.hidden_field :creator_id, value: @user.id %>
      <br>
      <%= f.submit "Publish", class: "btn btn-primary" %>
<% end %>